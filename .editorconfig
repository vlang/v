# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.v]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
