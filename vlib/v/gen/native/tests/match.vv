fn multiple_test() { // from match_test.v
	a := 9
	match a {
		1, 2, 3 { println('1-3') }
		4, 5 { println('4-5') }
		6...9 { println('6-9') }
		else { println('other') }
	}
}

enum Foo {
	a
	b
	c = 4 + 8
}

fn get() Foo {
	return .a
}

fn foo(f Foo) {
	match f {
		.a {
			println('a')
		}
		.b {
			println('b')
		}
		.c {
			println('c')
		}
	}
}

fn enum_test() {
	foo(match get() {
		.a { .b }
		.b { .c }
		.c { .a }
	})
}

fn main() {
	match_for_test()
	ifexpr_match_test()
	integer_match_test()
	multiple_test()
	enum_test()
}
