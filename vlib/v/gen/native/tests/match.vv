fn match_for_test() { // from for_loops_2_test.v
	mut a := 2
	mut b := 0
	for {
		match a {
			2 {
				println('a == 2')
				a = 0
				continue
			}
			0 {
				println('a == 0')
				a = 5
				b++
				break
			}
			else {
				println('unexpected branch')
				break
			}
		}
	}
	assert a == 5
	assert b == 1
	println(b)
	println(a)
}

fn ifexpr_match_test() { // from if_expr_with_nested_match_expr_test.v
	b := true // this is needed. why?
	a := if b {
		match 5 {
			5 { 0 }
			else { 1 }
		}
	} else {
		3
	}
	assert a == 0
	println(a)
}

